{
  "singleQuote": true,
  "semi": true,
  "quoteProps": "as-needed",
  "trailingComma": "all",

  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,

  "arrowParens": "avoid",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "bracketSameLine": false,

  "proseWrap": "always",
  "htmlWhitespaceSensitivity": "css",

  "requirePragma": false,
  "insertPragma": false
}
